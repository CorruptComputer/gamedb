# Build image
FROM golang:1.13-alpine AS build-env
WORKDIR /root/
COPY ./ ./
RUN apk update && apk add git
RUN cd ./cmd/webserver && go mod tidy && CGO_ENABLED=0 GOOS=linux go build -a -ldflags "-X main.version=`git rev-parse --verify HEAD`"

# Runtime image
FROM alpine:3.10 AS runtime-env
WORKDIR /root/
COPY --from=build-env /root/cmd/webserver/webserver ./
COPY ./assets ./assets
COPY ./cmd/webserver/templates ./templates
COPY ./cmd/webserver/health-check.sh ./health-check.sh
RUN ["chmod", "+x", "health-check.sh"]
RUN touch ./google-auth.json
RUN apk update && apk add ca-certificates curl bash
CMD ["./webserver"]
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=2 CMD ./health-check.sh
