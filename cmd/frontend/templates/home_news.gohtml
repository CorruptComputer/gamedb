{{define "home_news"}}

    <h5 class="card-header">News</h5>
    <div class="card-body">
        <ul class="list-unstyled">

            {{ range $key, $value := .News }}
                <li class="media" data-link="{{ .Link }}">
                    <img src="" data-lazy="https://images.weserv.nl/?url={{ .Image }}&output=webp" alt="" data-lazy-alt="{{ .Title }}" class="mr-3 mb-2 img rounded">
                    <div class="media-body">
                        <h5 class="mt-0 mb-1">{{ .Title }}</h5>
                        {{ .Contents }}
                    </div>
                </li>
            {{ end }}

        </ul>
    </div>
    <a href="/news#{{ .NewsID }}" class="card-footer">More Game News</a>

{{end}}
