{{define "flashes"}}

    {{ if gt (len .FlashesGood) 0 }}
        <div class="alert alert-success" role="alert" id="flashes-good">
            {{ range $key, $value := .FlashesGood }}
                <p>{{ $value }}</p>
            {{ end }}
        </div>
    {{ end }}

    {{ if gt (len .FlashesBad) 0 }}
        <div class="alert alert-danger" role="alert" id="flashes-bad">
            {{ range $key, $value := .FlashesBad }}
                <p>{{ $value }}</p>
            {{ end }}
        </div>
    {{ end }}


    <div class="container text-center" style="max-height: 120px;" id="flashes-ad">
        {{ if .ShowAds }}
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <ins class="adsbygoogle" style="display: block; max-height: 120px;" data-ad-client="ca-pub-5468884371420326" data-ad-slot="1243438873" data-ad-format="auto" data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        {{ end }}
    </div>

{{end}}
