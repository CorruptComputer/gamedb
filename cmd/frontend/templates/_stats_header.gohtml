{{define "_stats_header"}}

    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" role="tablist">

            <li class="nav-item">
                {{if endsWith .Path "/stats" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-signal"></i> Steam</span>
                {{else}}
                    <a class="nav-link" href="/stats" role="tab"><i class="fas fa-signal"></i> Steam</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/stats/gamedb" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-signal"></i> Game DB</span>
                {{else}}
                    <a class="nav-link" href="/stats/gamedb" role="tab"><i class="fas fa-signal"></i> Game DB</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/tags" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-tag"></i> Tags</span>
                {{else}}
                    <a class="nav-link" href="/tags" role="tab"><i class="fas fa-tag"></i> Tags</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/genres" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-film"></i> Genres</span>
                {{else}}
                    <a class="nav-link" href="/genres" role="tab"><i class="fas fa-film"></i> Genres</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/categories" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-star"></i> Categories</span>
                {{else}}
                    <a class="nav-link" href="/categories" role="tab"><i class="fas fa-film"></i> Categories</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/publishers" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-star"></i> Publishers</span>
                {{else}}
                    <a class="nav-link" href="/publishers" role="tab"><i class="fas fa-star"></i> Publishers</a>
                {{end}}
            </li>

            <li class="nav-item">
                {{if startsWith .Path "/developers" }}
                    <span class="nav-link active" role="tab"><i class="fas fa-star"></i> Developers</span>
                {{else}}
                    <a class="nav-link" href="/developers" role="tab"><i class="fas fa-star"></i> Developers</a>
                {{end}}
            </li>

        </ul>
    </div>

{{end}}
