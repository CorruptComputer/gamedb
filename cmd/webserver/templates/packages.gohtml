{{define "packages"}} {{ template "_header" . }}

<div class="container" id="packages-page">

    <div class="jumbotron">
        <h1><i class="fas fa-cube"></i> Packages</h1>
        <p class="lead">{{ .Description }}</p>
        <small>Packages are collections of apps. Purchasing a package will give your account access to download all of it's contents.</small>
    </div>

    {{ template "_flashes" . }}

    <div class="card">
        {{ template "_apps_header" . }}
        <div class="card-body">

            {{/* Packages List */}}
            <div class="table-responsive">
                <table class="table table-hover table-striped table-datatable2" data-path="/packages/packages.json">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Coming Soon</th>
                        <th scope="col">Apps</th>
                        <th scope="col">Price</th>
                        <th scope="col">Updated At</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

{{ template "_footer" . }} {{end}}
