{{define "admin"}} {{ template "_header" . }}

<div class="container" id="admin-page">

    <div class="jumbotron">
        <h1><i class="fas fa-unlock"></i> Admin</h1>
    </div>

    <div class="card">
        <div class="card-header">

            <h5 class="float-right mb-0">
                <span class="badge badge-secondary cursor-pointer" id="live-badge">Live</span>
            </h5>

            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#actions" role="tab">Actions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#queues" role="tab">Queues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#binlogs" role="tab">SLQ Bin Logs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#running" role="tab">SQL Queries</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#websockets" role="tab">Websockets</a>
                </li>
            </ul>

        </div>
        <div class="card-body">

            <div class="tab-content">
                <div class="tab-pane show active" id="actions" role="tabpanel">

                    {{ if eq .Env "local" }}
                        <div class="alert alert-primary" role="alert">Showing local Memcache / Queues</div>
                    {{ end }}

                    <h5>Cron Jobs</h5>
                    <div class="row" id="actions">
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-tags" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Tags<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-tags").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-genres" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Genres<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-genres").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-developers" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Developers<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-developers").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-publishers" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Publishers<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-publishers").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-donations" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Donations<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-donations").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-ranks" role="button" class="btn btn-success btn-block mb-4">
                                Refresh Ranks<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-ranks").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-app-players" role="button" class="btn btn-success btn-block mb-4">
                                Refresh App Players<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-all-app-players").Value }}"></small>
                            </a>
                        </div>
                    </div>

                    <h5>Actions</h5>
                    <div class="row">
                        <div class="col col-xl-3">
                            <a href="/admin/wipe-memcache" role="button" class="btn btn-danger btn-block mb-4">
                                Wipe Memcache<br/>
                                <small data-livestamp="{{ (index .Configs .GetMCConfigKey).Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-all-apps" role="button" class="btn btn-danger btn-block mb-4">
                                Refresh All Apps<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-all-apps").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-all-packages" role="button" class="btn btn-danger btn-block mb-4">
                                Refresh All Packages<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-all-packages").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/refresh-all-players" role="button" class="btn btn-danger btn-block mb-4">
                                Refresh All Players<br/>
                                <small data-livestamp="{{ (index .Configs "refresh-all-players").Value }}"></small>
                            </a>
                        </div>
                        <div class="col col-xl-3">
                            <a href="/admin/run-dev-code" role="button" class="btn btn-danger btn-block mb-4">
                                Run Dev Code<br/>
                                <small data-livestamp="{{ (index .Configs "run-dev-code").Value }}"></small>
                            </a>
                        </div>
                    </div>

                    <h5>Info</h5>
                    <div class="row">
                        <div class="col col-xl-3">
                            <div class="btn btn-info btn-block mb-4 disabled">
                                Goroutines<br/>
                                <small>{{ .Goroutines }}</small>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane" id="queues" role="tabpanel">

                    <form action="/admin/queues" method="post" id="queues">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="app-id">App ID:</label>
                            <div class="col-sm-3">
                                <input type="text" name="app-id" id="app-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="package-id">Package ID:</label>
                            <div class="col-sm-3">
                                <input type="text" name="package-id" id="package-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="player-id">Player ID:</label>
                            <div class="col-sm-3">
                                <input type="text" name="player-id" id="player-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="bundle-id">Bundle ID:</label>
                            <div class="col-sm-3">
                                <input type="text" name="bundle-id" id="bundle-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="apps-ts">All apps since timestamp:</label>
                            <div class="col-sm-3">
                                <input type="number" name="apps-ts" id="apps-ts" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add to Rabbit</button>
                    </form>

                </div>
                <div class="tab-pane" id="binlogs" role="tabpanel">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-datatable mb-3" data-sort="[[0, 'asc']]" id="bin-logs">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Bytes</th>
                                <th scope="col">Total Bytes</th>
                                <th scope="col">Delete All Before</th>
                            </tr>
                            </thead>
                            <tbody class="tags-list">
                            {{ range $key, $value := .BinLogs }}
                                <tr>
                                    <td>{{ .Name }}</td>
                                    <td>{{ bytes .Bytes }}</td>
                                    <td>{{ bytes .Total }}</td>
                                    <td><a href="/admin/delete-bin-logs?name={{ .Name }}"><i class="fas fa-backspace"></i></a></td>
                                </tr>
                            {{ end }}
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="tab-pane" id="running" role="tabpanel">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-datatable mb-0" data-sort="[[0, 'asc']]">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">User</th>
                                <th scope="col">Host</th>
                                <th scope="col">Cmd</th>
                                <th scope="col">Time</th>
                                <th scope="col">State</th>
                                <th scope="col">Info</th>
                            </tr>
                            </thead>
                            <tbody class="tags-list">
                            {{ range $key, $value := .Queries }}
                                <tr>
                                    <td>{{ .ID }}</td>
                                    <td>{{ .User }}</td>
                                    <td>{{ .Host }}</td>
                                    <td>{{ .Command }}</td>
                                    <td>{{ seconds .Seconds }}</td>
                                    <td>{{ .State }}</td>
                                    <td>{{ .Info }}</td>
                                </tr>
                            {{ end }}
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="tab-pane" id="websockets" role="tabpanel">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-datatable mb-0" data-sort="[[0, 'asc']]">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Page</th>
                                <th scope="col">Count</th>
                            </tr>
                            </thead>
                            <tbody class="tags-list">
                            {{ range $key, $value := .Websockets }}
                                <tr>
                                    <td>{{ .GetName }}</td>
                                    <td>{{ .CountConnections }}</td>
                                </tr>
                            {{ end }}
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>
    </div>

</div>

{{ template "_footer" . }} {{end}}
