{{define "stats"}}
    {{ template "_header" . }}

    <div class="container" id="stats-page">

        <div class="jumbotron">
            <h1 class="mb-0"><i class="fas fa-chart-bar"></i> Stats</h1>
        </div>

        {{ template "_flashes" . }}

        <div class="card">
            {{ template "_stats_header" . }}
            <div class="card-body">

                <div class="row">
                    <div class="col mb-4">
                        <a href="/games" role="button" class="btn btn-success btn-block mb-0">Apps<br/>{{ comma64 .AppsCount}}</a>
                    </div>
                    <div class="col mb-4">
                        <a href="/packages" role="button" class="btn btn-success btn-block mb-0">Packages<br/>{{ comma64 .PackagesCount}}</a>
                    </div>
                    <div class="col mb-4">
                        <a href="/bundles" role="button" class="btn btn-success btn-block mb-0">Bundles<br/>{{ comma .BundlesCount}}</a>
                    </div>
                    <div class="col mb-4">
                        <a href="/achievements" role="button" class="btn btn-success btn-block mb-0">Achievements<br/>{{ comma64 .AchievementsCount}}</a>
                    </div>
                    <div class="col mb-4">
                        <a href="/news" role="button" class="btn btn-success btn-block mb-0">Articles<br/>{{ comma64 .ArticlesCount}}</a>
                    </div>
                </div>

                <h5>Players Online <small>({{ round64 .SteamPlayersOnline }}, {{ round64 .SteamPlayersInGame }} in game)</small></h5>
                <div class="chart" id="client-players">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>

                <h5>Players Online <small>(5 years)</small></h5>
                <div class="chart" id="client-players2">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>

                <h5>App Scores</h5>
                <div class="chart" id="scores">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>

                <h5>App Release Dates</h5>
                <div class="chart" id="release-dates">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>

                <h5>App Types</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-striped" data-order='[[1, "desc"]]' id="app-types">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Count</th>
                            <th scope="col" nowrap="nowrap">Total Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td colspan="3">
                                <i class="fas fa-spinner fa-spin"></i>
                            </td>
                        </tr>
                        </tbody>
                        <tfoot class="thead-light">
                        <tr>
                            <td>Total:</td>
                            <td></td>
                            <td nowrap="nowrap" id="total-price"></td>
                        </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>

    </div>

    {{ template "_footer" . }}
{{end}}
