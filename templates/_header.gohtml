{{define "_header"}}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/compiled.min.css?rel=880637fa8e">

    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/sa-bg-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/assets/img/sa-bg-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/sa-bg-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/sa-bg-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/assets/img/safari-pinned-tab.svg" color="#343a40">
    <link rel="shortcut icon" href="/assets/img/sa-bg-48x48.ico">

    <meta name="apple-mobile-web-app-title" content="Game DB">
    <meta name="application-name" content="Game DB">
    <meta name="msapplication-TileColor" content="#343a40">
    <meta name="msapplication-config" content="/browserconfig.xml">
    <meta name="theme-color" content="#343a40">
    <meta name="google" content="notranslate">
    <meta name="google-site-verification" content="brhvE2bHEwuvvoiOxeYHMQRSQECE4vAk8rMJ3iYZtSg"/>

    <!-- Common -->
    <title>{{ .Title }}</title>
    <meta charset="utf-8">
    <meta name="keywords" content="Game DB, Steam Authority, Steam Database, Steam Games">
    <meta name="description" content="{{ .Description }}">
    <!-- Schema.org -->
    <meta itemprop="name" content="{{ .Title }}">
    <meta itemprop="description" content="{{ .Description }}">
    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{ .Title }}">
    <meta name="twitter:description" content="{{ .Description }}">
    <!-- Open Graph -->
    <meta name="og:title" content="{{ .Title }}">
    <meta name="og:description" content="{{ .Description }}">
    <meta name="og:image" content="/assets/img/sa-bg-500x500.png">
    <meta name="og:url" content="{{ .Path }}">
    <meta name="og:locale" content="en_US">
    <meta name="og:type" content="website">
    <!-- Facebook -->
    <meta name="fb:admins" content="537840742">
    <meta name="fb:app_id" content="2539079269452708">

    {{if .IsFromVarnish }}
        <esi:include src="/esi/header"/>
    {{else}}
        {{ template "_header_esi" . }}
    {{end}}

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-125104-31"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());
        gtag('config', 'UA-125104-31');

        if (user.userID > 0) {
            gtag('set', {'user_id': user.userID});
        }
    </script>
</head>
<body>

<header class="container">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
            <img src="/assets/img/sa-500x500.png" alt="Game DB">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item {{if startsWith .Path "/apps" }}active{{end}}">
                    <a class="nav-link" href="/apps?types=game">Games</a>
                </li>

                <li class="nav-item {{if startsWith .Path "/players" }}active{{end}}">
                    <a class="nav-link" href="/players">Players</a>
                </li>

                <li class="nav-item {{if startsWith .Path "/upcoming" }}active{{end}}">
                    <a class="nav-link" href="/upcoming/apps">Upcoming</a>
                </li>

                <li class="nav-item {{if startsWith .Path "/coop" }}active{{end}}">
                    <a class="nav-link" href="/coop">Co-op</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Deals</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/price-changes">Price Changes</a>
                        <a class="dropdown-item" href="/free-games">Free Games</a>
                        {{/*<a class="dropdown-item" href="/discounts">Discounts</a>*/}}
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Stats</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/stats">Stats</a>
                        <a class="dropdown-item" href="/tags">Tags</a>
                        <a class="dropdown-item" href="/genres">Genres</a>
                        <a class="dropdown-item" href="/publishers">Publishers</a>
                        <a class="dropdown-item" href="/developers">Developers</a>
                    </div>
                </li>

                <li class="nav-item {{if startsWith .Path "/news" }}active{{end}}">
                    <a class="nav-link" href="/news">News</a>
                </li>

                <li class="nav-item {{if startsWith .Path "/chat" }}active{{end}}">
                    <a class="nav-link" href="/chat">Chat</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item" id="header-flag">
                    {{/* Added with JS */}}
                </li>

                <li class="nav-item {{if startsWith .Path "/admin" }}active{{end}}" id="header-admin">
                    {{/* Added with JS */}}
                </li>

                <li class="nav-item" id="header-user">
                    {{/* Added with JS */}}
                </li>

                <li class="nav-item {{if startsWith .Path "/contact" }}active{{end}}">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>

                <li class="nav-item {{if startsWith .Path "/donate" }}active{{end}}">
                    <a class="nav-link" href="/donate">Donate</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">More</a>
                    <div class="dropdown-menu" id="header-settings">
                        {{/*<a class="dropdown-item" href="/packages">Packages</a>*/}}
                        <a class="dropdown-item" href="/experience">Experience</a>
                        <a class="dropdown-item" href="/changes">Changes</a>
                        <a class="dropdown-item" href="/queues">Queues</a>
                        <a class="dropdown-item" href="/info">Info</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>

{{/*<div id="squares"></div>*/}}

<div id="ad-top" class="container"></div>

{{end}}
