{{define "admin"}} {{ template "_header" . }}

<div class="container" id="admin-page">

    <div class="jumbotron">
        <h1 class="display-4"><i class="fas fa-unlock"></i> Admin</h1>
    </div>

    <div class="card">
        <div class="card-header">

            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#actions" role="tab">Actions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#queues" role="tab">Queues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#logs" role="tab">Logs</a>
                </li>
            </ul>

        </div>
        <div class="card-body">

            <div class="tab-content">
                <div class="tab-pane show active" id="actions" role="tabpanel">

                    <div class="list-group list-group-flush" id="actions">
                        <a href="/admin/re-add-all-apps" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "added-all-apps").Value }}"></small>
                            <h5 class="mb-1">Apps</h5>
                            <p class="mb-1">Get every app from steam and add to queue</p>
                        </a>
                    {{ if .IsProduction }}
                        <a href="/admin/deploy" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "deployed").Value }}"></small>
                            <h5 class="mb-1">Deploy</h5>
                            <p class="mb-1">Pull master, build and restart</p>
                        </a>
                    {{end}}
                        <a href="/admin/count-donations" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "donations-updated").Value }}"></small>
                            <h5 class="mb-1">Donations</h5>
                            <p class="mb-1">Read donations table and calculate totals</p>
                        </a>
                        <a href="/admin/count-genres" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "genres-updated").Value }}"></small>
                            <h5 class="mb-1">Genres</h5>
                            <p class="mb-1">Scan all apps for genres, count them, update genres table</p>
                        </a>
                        <a href="/admin/calculate-ranks" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "ranks-updated").Value }}"></small>
                            <h5 class="mb-1">Ranks</h5>
                            <p class="mb-1">Scan all players, update ranks table</p>
                        </a>
                        <a href="/admin/count-tags" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "tags-updated").Value }}"></small>
                            <h5 class="mb-1">Tags</h5>
                            <p class="mb-1">Scan all apps for tags, count them, update tags table</p>
                        </a>
                        <a href="/admin/count-developers" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "developers-updated").Value }}"></small>
                            <h5 class="mb-1">Developers</h5>
                            <p class="mb-1">Scan all apps for developers, count them, update developers table</p>
                        </a>
                        <a href="/admin/count-publishers" class="list-group-item list-group-item-action flex-column align-items-start">
                            <small class="text-muted float-right" data-livestamp="{{ (index .Configs "publishers-updated").Value }}"></small>
                            <h5 class="mb-1">Publishers</h5>
                            <p class="mb-1">Scan all apps for publishers, count them, update publishers table</p>
                        </a>
                        <a href="/admin/wipe-memcache" class="list-group-item list-group-item-action flex-column align-items-start">
                            <h5 class="mb-1">Wipe Memcache</h5>
                            <p class="mb-1">Clear all memcache</p>
                        </a>
                    </div>

                </div>
                <div class="tab-pane" id="queues" role="tabpanel">

                    <form action="/admin/queues" method="post" id="queues">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" for="app-id">App ID</label>
                            <div class="col-sm-10">
                                <input type="number" name="app-id" id="app-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" for="package-id">Package ID</label>
                            <div class="col-sm-10">
                                <input type="number" name="package-id" id="package-id" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" for="player-id">Player ID</label>
                            <div class="col-sm-10">
                                <input type="number" name="player-id" id="player-id" class="form-control" value="{{ .UserID }}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" for="change-id">Change ID</label>
                            <div class="col-sm-10">
                                <input type="number" name="change-id" id="change-id" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Produce</button>
                    </form>

                </div>
                <div class="tab-pane" id="logs" role="tabpanel">

                    <pre><code>{{ range $key, $value := .Errors }}{{$value}}{{ end }}</code></pre>

                </div>
            </div>

        </div>
    </div>

</div>

{{ template "_footer" . }} {{end}}
